@model BaiTap.Models.account_user

@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Đăng ký</h2>

@using (Html.BeginForm("Signin", "TaiKhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.username, new { @class = "control-label" })
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập tài khoản" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.password, new { @class = "control-label" })
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu", type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fullName, new { @class = "control-label" })
                    @Html.EditorFor(model => model.fullName, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nhập họ tên" } })
                    @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.dateofbirth, new { @class = "control-label" })
                    @Html.EditorFor(model => model.dateofbirth, new { htmlAttributes = new { @class = "form-control form-control-lg", type = "date" } })
                    @Html.ValidationMessageFor(model => model.dateofbirth, "", new { @class = "text-danger" })
                </div>


                <div class="form-group text-center">
                    <input type="submit" value="Signin" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        background-color: #f8f9fa; /* Màu nền nhẹ nhàng */
    }

    h2 {
        margin-bottom: 20px;
        color: #343a40; /* Màu chữ */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 18px; /* Kích thước chữ lớn hơn */
        color: #fff;
        transition: background-color 0.3s, border-color 0.3s; /* Hiệu ứng chuyển đổi */
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-control {
        border-radius: 20px; /* Bo góc cho ô nhập liệu */
        border: 1px solid #ced4da; /* Viền cho ô nhập liệu */
        padding: 15px; /* Padding cho ô nhập liệu */
        font-size: 16px; /* Kích thước chữ trong ô nhập liệu */
        transition: border-color 0.3s; /* Hiệu ứng chuyển đổi viền */
    }

        .form-control:focus {
            border-color: #80bdff; /* Màu viền khi ô được chọn */
            box-shadow: 0 0 5px rgba(0, 123, 255, .5); /* Bóng đổ cho ô nhập liệu khi chọn */
        }

    .text-danger {
        font-size: 14px; /* Kích thước chữ cho thông báo lỗi */
    }
</style>
